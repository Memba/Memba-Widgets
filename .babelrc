{
    "presets": [
        "env"
    ],
    // Webpack does not need the plugin section to build, kept for SystemJS
    "plugins": [
        [
            "module-resolver",
            {
                "extensions": [".es6", ".js"],
                "root": [
                    ".",
                    "./test/vendor/",
                    "./src/js/vendor/kendo/",
                    "./src/js/vendor/kendo/cultures/",
                    "./src/js/vendor/kendo/messages/"
                ],
                "alias": {
                    // This takes over externals in webpack and includes jQuery in the builds
                    "jquery": "./src/js/vendor/jquery/jquery-3.3.1.min.js"
                }
            }
        ]
    ]
}
